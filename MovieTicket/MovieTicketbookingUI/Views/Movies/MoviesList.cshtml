
@model IEnumerable<MovieTicketbookingModel.Movie>

@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MoviesList</h2>

<p>
    @Html.ActionLink("Add Movie", "CreateMovie", "Movies")
</p>

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Movie ReleaseDate</th>
            <th>No Of Seats Available</th>
            <th>Book Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.ReleaseDate</td>
            <td>@movie.SeatsAvailable</td>
            <td>
                @Html.ActionLink("Book", "MovieDetails", "Movies", new { id = movie.Id }, null) |
                @Html.ActionLink("Seats Available", "AvaiableSeats", "Bookings", null)
            </td>
        </tr>
        }
    <tbody />
</table>
